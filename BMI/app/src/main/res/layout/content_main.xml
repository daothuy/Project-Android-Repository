<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">
<AbsoluteLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chiều cao"
        android:layout_x="25dp"
        android:layout_y="35dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cân nặng"
        android:id="@+id/textView"
        android:layout_x="29dp"
        android:layout_y="73dp"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:id="@+id/height"
        android:layout_x="149dp"
        android:layout_y="17dp" />

    <EditText
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:id="@+id/weight"
        android:layout_x="154dp"
        android:layout_y="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BMI"
        android:id="@+id/textView3"
        android:layout_x="30dp"
        android:layout_y="215dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chẩn đoán"
        android:id="@+id/textView4"
        android:layout_x="32dp"
        android:layout_y="251dp" />

    <EditText
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:id="@+id/BMI"
        android:layout_x="217dp"
        android:layout_y="201dp" />

    <EditText
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_x="156dp"
        android:layout_y="245dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính BMI"
        android:id="@+id/btnBMI"
        android:layout_x="193dp"
        android:layout_y="132dp" />

</AbsoluteLayout>
</RelativeLayout>
